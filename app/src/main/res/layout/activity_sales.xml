<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sales"
    android:background="@color/navy">

    <ImageButton
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/flipkart_full"/>

    <ImageView
        android:id="@+id/laptop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/laptop"
        app:layout_constraintTop_toBottomOf="@id/logo"/>
    <CheckBox
        android:id="@+id/first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@id/laptop"/>

    <ImageView
        android:id="@+id/mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mobile"
        app:layout_constraintTop_toBottomOf="@id/laptop"/>
    <CheckBox
        android:id="@+id/second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@id/mobile"/>

    <ImageView
        android:id="@+id/headphones"
        android:layout_width="match_parent"
        android:layout_height="234dp"
        android:background="@drawable/headphones"
        app:layout_constraintTop_toBottomOf="@id/mobile"/>
    <CheckBox
        android:id="@+id/third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@id/headphones"/>


    <ImageButton
        android:id="@+id/buy"
        android:layout_width="120dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@color/yellow"
        app:layout_constraintVertical_bias=".97"/>

    <TextView
        android:id="@+id/buyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy Now!"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        app:layout_constraintEnd_toEndOf="@id/buy"
        app:layout_constraintStart_toStartOf="@id/buy"
        app:layout_constraintTop_toTopOf="@id/buy"
        app:layout_constraintBottom_toBottomOf="@id/buy"
        android:textSize="18dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>