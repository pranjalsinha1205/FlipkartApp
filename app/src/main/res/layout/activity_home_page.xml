<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy"
    tools:context=".HomePage">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/flipkart_full"/>

    <ImageButton
        android:id="@+id/flipkart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".08"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:src="@drawable/flipkart_small"/>

    <ImageButton
        android:id="@+id/grocery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/flipkart"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:layout_margin="10dp"
        android:src="@drawable/grocery"/>

    <ImageButton
        android:id="@+id/sale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/big_billion_days"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/flipkart"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Flipkart!"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@id/sale"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".3"
        app:layout_constraintStart_toStartOf="@id/sale"
        app:layout_constraintEnd_toEndOf="@id/sale"/>

</androidx.constraintlayout.widget.ConstraintLayout>